            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Departure " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="145" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl2" Content="Colombo" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="59" Margin="10,10,0,0" VerticalAlignment="Top" Width="158">
            <Label Content="Your Bill" HorizontalAlignment="Left" Height="57" Width="118" FontFamily="Impact" FontSize="24"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="226" Margin="187,69,0,0" VerticalAlignment="Top" Width="176">
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Flight Number " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="152" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl5" Content="F001" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Ticket ID " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="145" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl6" Content="T1" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="226" Margin="397,69,0,0" VerticalAlignment="Top" Width="176">
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Class " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="152" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl9" Content="Business" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Package " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="145" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl10" Content="Premium" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="194" Margin="6,300,0,-44" VerticalAlignment="Top" Width="176">
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="User ID " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="152" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl3" Content="U001" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Passengers " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="145" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl4" Content="2" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="194" Margin="187,295,0,-39" VerticalAlignment="Top" Width="176">
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Date Departing " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="162" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl7" Content="2024/02/10" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="113" Margin="10,0,0,0" Width="172">
                <Label Content="Departure Time " HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="162" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="20"/>
                <Label Name="lbl8" Content="12-20-00 AM" HorizontalAlignment="Left" Height="56" Margin="10,0,0,0" Width="148" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="41" Margin="409,303,0,0" VerticalAlignment="Top" Width="254">
            <Label Content="Total Price  - " Height="58" Margin="10,0,128,0" FontFamily="Iskoola Pota" FontSize="20"/>
            <Label Name="lbl11" Content="7500$" HorizontalAlignment="Left" Height="48" Margin="121,-60,0,0" Width="113" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="118" Margin="429,371,0,-39" VerticalAlignment="Top" Width="144">
            <Button Name="btn1" Foreground="White" Background="Indigo" Content="Confirm Payment" HorizontalAlignment="Left" Height="45" Width="144" FontFamily="Nirmala UI" FontWeight="Bold" Click="Button_Click"/>
            <Button Name="btn2" Foreground="White" Background="Red" Content="Discard" HorizontalAlignment="Left" Height="45" Width="144" FontFamily="Nirmala UI" FontWeight="Bold" Click="Btn2_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
