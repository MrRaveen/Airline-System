<Window x:Class="practical2WPF.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practical2WPF"
        mc:Ignorable="d"
        Title="SignUp" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="145*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="41*"/>
                <ColumnDefinition Width="42*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="0 0 0 0" Margin="0,0,0,-5" Grid.ColumnSpan="2" RenderTransformOrigin="0.457,0.506">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Purple" Offset="0"/>
                        <GradientStop Color="#3AADA1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20 230,140 0,270" Fill="#4eb1b6"/>
                        <Polygon Points="100,400 200,350 180,470" Fill=" #4EB1B6" Canvas.Left="5" Canvas.Top="-36" HorizontalAlignment="Center" Height="470" VerticalAlignment="Center"/>
                        <Ellipse Margin="50 400 0 0" Width="20" Height="20" Fill="#4eb1b6"/>
                        <TextBox x:Name="box1" Background="Transparent" Foreground="White" BorderBrush="LightGray" BorderThickness="0,0,0,1" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="" Width="224" Canvas.Left="291" Canvas.Top="133"/>
                        <PasswordBox  HorizontalAlignment="Left" Name="psbox2" Background="Transparent" Foreground="White" BorderBrush="LightGray" BorderThickness="0,0,0,1" Height="28" Grid.Row="1" VerticalAlignment="Top" Width="230" Canvas.Left="291" Canvas.Top="273"/>
                        <TextBox x:Name="box3" Background="Transparent" Foreground="White" BorderBrush="LightGray" BorderThickness="0,0,0,1" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="" Width="223" Canvas.Left="291" Canvas.Top="202"/>
                        <Button Background="Yellow" Content="Let's Go" Width="232"  Canvas.Left="291" Canvas.Top="406" FontFamily="Microsoft JhengHei UI Light" FontWeight="Bold" Height="28" FontSize="14" Click="Button_Click_1"/>
                        <TextBlock Name="block1" Text="" Foreground="Red" Height="24" Canvas.Left="534" Canvas.Top="129" Width="163"/>
                        <TextBlock Foreground="White" Text="Confirm Password" Height="25" Canvas.Left="291" Canvas.Top="325" Width="134" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="Password" Foreground="White" Canvas.Left="291" Canvas.Top="257" Width="114" Height="34" FontSize="14" FontFamily="Nirmala UI" FontWeight="Bold"/>
                        <TextBlock Foreground="White" Text="Your Username" Canvas.Left="291" Canvas.Top="114" Width="166" Height="40" FontSize="14" FontFamily="Nirmala UI" FontWeight="Bold"/>
                        <Label Content="Welcome" Foreground="White" Height="56" Canvas.Left="307" Width="195" FontFamily="Segoe UI Black" FontSize="36"/>
                        <TextBlock Foreground="White" Text="To the world of Cytrus" Canvas.Left="311" Canvas.Top="61" Width="195" Height="38" FontFamily="Microsoft YaHei UI" FontSize="16"/>
                        <TextBlock Foreground="White" Text="Email" Height="30" Canvas.Left="291" Canvas.Top="180" Width="199" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="14"/>
                        <PasswordBox HorizontalAlignment="Left" x:Name="psbox3" Background="Transparent" Foreground="White" BorderBrush="LightGray" BorderThickness="0,0,0,1" Height="28" VerticalAlignment="Top" Width="230" Canvas.Left="291" Canvas.Top="346"/>
                        <TextBlock Foreground="Red" Name="block4" Text="" Height="24" Canvas.Left="534" Canvas.Top="346" Width="163"/>
                        <TextBlock Foreground="Red" Name="block3" Text="" Height="24" Canvas.Left="534" Canvas.Top="277" Width="163"/>
                        <TextBlock Name="block2" Text="" Foreground="Red" Height="24" Canvas.Left="534" Canvas.Top="202" Width="163"/>
                        <Button Background="OrangeRed"  Content="Exit" Height="23" Canvas.Left="739" Canvas.Top="10" Width="51" Click="Button_Click"/>
                        <Button Content="Log In" Height="32" Background="Yellow" Canvas.Left="739" Canvas.Top="40" Width="51" Click="Button_Click_2"/>
                    </Canvas>


                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
