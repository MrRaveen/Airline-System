<UserControl x:Class="practical2WPF.CommunityClass"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:practical2WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="282">
            <TextBlock  HorizontalAlignment="Left" Height="27" Margin="10,0,0,0" TextWrapping="Wrap" Text="Community Class (C1)" Width="208" FontFamily="Nirmala UI" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
        <!--StackPanel HorizontalAlignment="Left" Height="56" Margin="476,5,0,0" VerticalAlignment="Top" Width="246">
            <Label Content="Community Class (C1)" HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" Width="199" FontFamily="Nirmala UI" FontSize="16" FontWeight="Bold"/>
        </StackPanel-->
        <StackPanel HorizontalAlignment="Left" Height="271" Margin="18,42,0,0" VerticalAlignment="Top" Width="194">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="274" VerticalAlignment="Top" Width="198" Margin="-2,0,-3,0">
                <Border.Background>
                    <ImageBrush ImageSource="Images/C1.jpg"/>
                </Border.Background>
            </Border>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="112" Margin="18,318,0,0" VerticalAlignment="Top" Width="247">
            <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="238">
                <Border.Background>
                    <ImageBrush ImageSource="Images/C12.jpg"/>
                </Border.Background>
            </Border>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="112" Margin="248,66,0,0" VerticalAlignment="Top" Width="482">
            <TextBlock HorizontalAlignment="Left" Height="107" Margin="10,0,0,0" TextWrapping="Wrap" Text="Flying economy class, often referred to as &quot;coach&quot; or &quot;standard class,&quot; is the most common and affordable way to travel by air. It is designed to offer passengers essential amenities and services while keeping costs relatively low. Here are some key aspects of the economy class experience:" Width="443" FontFamily="Nirmala UI" TextAlignment="Justify"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="37" Margin="248,29,0,0" VerticalAlignment="Top" Width="255">
            <TextBlock HorizontalAlignment="Left" Height="31" Margin="10,0,0,0" TextWrapping="Wrap" Text="Description" Width="203" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="18"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="36" Margin="257,285,0,0" VerticalAlignment="Top" Width="255">
            <TextBlock HorizontalAlignment="Left" Height="26" Margin="10,0,0,0" TextWrapping="Wrap" Text="You wll be get, " Width="226" FontFamily="Nirmala UI" FontWeight="Bold" FontSize="18"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="104" Margin="270,326,0,0" VerticalAlignment="Top" Width="473">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Width="463" Height="101" Text="Meals and Beverages - Depending on the duration of the flight, airlines may offer complimentary meals, snacks, and beverages. For shorter flights, passengers might receive a light snack and a drink. 
                                                                       Entertainment - Equipped with personal entertainment systems, offering a selection of movies, TV shows, music, and games."/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="112" Margin="248,157,0,0" VerticalAlignment="Top" Width="482">
            <TextBlock HorizontalAlignment="Left" Height="107" Margin="10,0,0,0" TextWrapping="Wrap" Text="Economy class seating typically features rows of seats with limited legroom and seat width compared to higher classes. Seats are arranged in a tight configuration, optimizing the number of passengers that can be accommodated. While seats usually offer basic reclining functions, the level of comfort can vary significantly between airlines and aircraft types. Many airlines provide adjustable headrests and small pillows to enhance passenger comfort." Width="443" FontFamily="Nirmala UI" TextAlignment="Justify"/>
        </StackPanel>
        <Border BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Left" Height="122" Margin="18,435,0,-107" VerticalAlignment="Top" Width="247">
            <Border.Background>
                <ImageBrush ImageSource="Images/B13.jpg"/>
            </Border.Background>
        </Border>
        <StackPanel HorizontalAlignment="Left" Height="53" Margin="292,440,0,-43" VerticalAlignment="Top" Width="238">
            <TextBlock Foreground="Black" FontSize="15" FontFamily="Nirmala UI" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top" Width="168"/>
            <TextBox Name="box1" IsReadOnly="True" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="53" Margin="292,504,0,-107" VerticalAlignment="Top" Width="238">
            <TextBlock Foreground="Black" FontSize="15" FontFamily="Nirmala UI" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="Total" VerticalAlignment="Top" Width="168"/>
            <TextBox Name="box2" IsReadOnly="True" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="43" Margin="530,450,0,-43" VerticalAlignment="Top" Width="230">
            <Button Background="Indigo" Foreground="White" FontFamily="Nirmala UI" Content="Book Now" HorizontalAlignment="Left" Height="40" Margin="10,0,0,0" Width="190" Click="Button_Click_1"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="53" Margin="530,504,0,-107" VerticalAlignment="Top" Width="200">
            <Button Background="Indigo" Foreground="White" FontFamily="Nirmala UI" Content="Book a different flight" HorizontalAlignment="Left" Height="36" Margin="10,0,0,0" Width="190" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
